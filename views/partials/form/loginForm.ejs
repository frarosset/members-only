    <form action="/login" method="POST">
      <div class="form-container light-transparent">
        <div class="form-inputs">
          <%- include("../base/input.ejs",{type: "text", name: "username", label: "Username", maxlength: process.env.USERNAME_MAX_LENGTH, required: true, autofocus: true}) _%>
          <%- include("../base/input.ejs",{type: "password", name: "password", label: "Password", maxlength: process.env.PASSWORD_MAX_LENGTH, required: true}) _%>
        </div>

        <%_ if(locals.message){ _%>
        <div><%= locals.message _%></div>
        <%_ } _%>

        <%- include("../base/submitButton.ejs", {label: "LOGIN"}) _%>
      </div>
    </form>
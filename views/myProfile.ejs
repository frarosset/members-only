<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> | My Profile</title>
  <%- include("partials/elements/dateScript") _%>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include("./partials/headerBackToIndex.ejs"); _%>

  <main>
    <div class="main-container">
      <header>
        <%- include("./partials/userInfo.ejs") _%>
      </header>

      <%- include("./partials/userDetails.ejs") _%>


      <div>
        <div>
          <%- include("./partials/elements/linkAsHighlightButton.ejs", {href: "/my-messages", text: "My messages"})%>
          <%- include("./partials/elements/linkAsHighlightButton.ejs", {href: "/new-message", text: "Post a new message"})%>
        </div>

        <div>
          <%_ if(!locals.currentUser.is_member) { _%>
          <%- include("./partials/elements/linkAsHighlightButton.ejs", {href: "/join-the-club", text: "Join the club"})%>
          <%_ } _%>

          <%_ if(!locals.currentUser.is_admin) { _%>
          <%- include("./partials/elements/linkAsHighlightButton.ejs", {href: "/become-admin", text: "Become admin"})%>
          <%_ } _%>
        </div>

        <div>
          <%- include("./partials/logoutButtonAndDialog.ejs",{customClass: "button block-border-gradient"}) _%>
        </div>
      </div>
    </div>
  </main>

</body>

</html>
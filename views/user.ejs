<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> | User Details</title>
  <%- include("partials/elements/dateScript") _%>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="user">
  <%- include("./partials/headerBackToIndex.ejs"); _%>

  <main>
    <div class="main-container">

      <header>
        <%- include("./partials/userInfo.ejs", {horizontal: true}) _%>
      </header>

      <%- include("./partials/userDetails.ejs") _%>

      <div class="user-messages">
        <%- include("partials/h2Heading.ejs", {text: "Messages from this user"}) _%>
        <%- include("./partials/messageList.ejs", {messagesArray: user.messages, hideUsername: true}) _%>
      </div>
    </div>
  </main>

  <%- include("./partials/creditFooter.ejs"); _%>
  <%- include("./partials/flashDialog.ejs"); _%>
</body>

</html>